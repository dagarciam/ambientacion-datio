<?xml version="1.0" encoding="UTF-8"?>
<settings
        xmlns="http://maven.apache.org/SETTINGS/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <localRepository>${user.home}/.m2/repository</localRepository>
    <servers>
        <server>
            <id>artifactory-spark</id>
            <username>BBVA_USERNAME</username>
            <password>ARTIFACTORY_API_KEY</password>
        </server>
        <server>
            <id>artifactory-semaas</id>
            <username>BBVA_USERNAME</username>
            <password>ARTIFACTORY_API_KEY</password>
        </server>
        <server>
            <id>artifactory-global-mirror</id>
            <username>BBVA_USERNAME</username>
            <password>ARTIFACTORY_API_KEY</password>
        </server>
        <server>
            <id>analytics-global-mirror</id>
            <username>BBVA_USERNAME</username>
            <password>ARTIFACTORY_API_KEY</password>
        </server>
        <server>
            <id>softtoken-mirror</id>
            <username>BBVA_USERNAME</username>
            <password>ARTIFACTORY_API_KEY</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>global</id>
            <repositories>
                <repository>
                    <id>artifactory-global-mirror</id>
                    <name>Internal artifactory</name>
                    <url>https://globaldevtools.bbva.com/artifactory-api/repository-spark</url>
                </repository>
                <repository>
                    <id>artifactory-semaas</id>
                    <url>https://globaldevtools.bbva.com/artifactory-api/repository-semaas-global-maven</url>
                    <releases>
                        <enabled>true</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>analytics-global-mirror</id>
                    <url>https://globaldevtools.bbva.com/artifactory-api/repository-analytics-global-maven</url>
                    <releases>
                        <enabled>true</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>softtoken-mirror</id>
                    <url>https://globaldevtools.bbva.com/artifactory-api/repository-softtoken</url>
                    <releases>
                        <enabled>true</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>artifactory-global-mirror</id>
                    <name>Internal artifactory</name>
                    <url>https://globaldevtools.bbva.com/artifactory-api/repository-spark</url>
                </pluginRepository>
                <pluginRepository>
                    <id>artifactory-semaas</id>
                    <name>Internal artifactory for semaas</name>
                    <url>https://globaldevtools.bbva.com/artifactory-api/repository-semaas-global-maven</url>
                </pluginRepository>
                <pluginRepository>
                    <id>softtoken-mirror</id>
                    <name>Internal artifactory for softoken</name>
                    <url>https://globaldevtools.bbva.com/artifactory-api/repository-softtoken</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>global</activeProfile>
    </activeProfiles>
</settings>
